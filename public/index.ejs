<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/awesomeface.png')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading" style="background-color:rgba(2,71,76,0.5);">
          <h1>Welcome!</h1>
          <hr class="small">
          <span class="subheading">Please check out my cool articles below.</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

      <% for(var slug in public.posts._data) { %>
        <%- partial("_partials/post-preview", {slug: slug, post: public.posts._data[slug]}); %>
        <hr>
      <% } %>

    </div>
  </div>
</div>
